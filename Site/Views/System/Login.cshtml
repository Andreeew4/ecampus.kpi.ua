@model Core.Credential

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-box">
    <div class="login-logo"></div>
    @using (Html.BeginForm("Login", "System"))
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Логін</label>
                    @Html.TextBoxFor(model => model.Login, new { @class = "form-control", placeholder = "Логін" })
                </div>
                <div class="form-group">
                    <label>Пароль</label>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Пароль" })
                </div>
            </div>
        </div>
        if (Model != null)
        {
            <div class="row">
                <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    Перевірте корректність логіну та паролю.
                </div>
            </div>
        }
        <div class="row">
            <div class="col-lg-12">
                <div class="remeber-me pull-left">
                    @Html.CheckBoxFor(model => model.RememberMe, new { id = "remember-me" })
                    <label for="remember-me">Запам’ятати мене</label>
                </div>
                <div class="pull-right">
                    <a id="forgot-password" href="#">Забули пароль?</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group text-center">
                    <input type="submit" class="btn btn-success" value="Вхід" />
                </div>
            </div>
        </div>
    }
</div>